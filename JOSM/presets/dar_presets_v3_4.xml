<?xml version="1.0" encoding="UTF-8"?>
<presets xmlns="http://josm.openstreetmap.de/tagging-preset-1.0"
	author="Paul Uithol &amp; Jeff Haack"
	version="0.3.4.2"
	shortdescription="Dar es Salaam"
	description="For mapping in Dar es Salaam as part of Community Mapping for Flood Resilience">

    <group name="Dar es Salaam">
	    <item name="Building" type="node,closedway,relation">
            <combo key="building" text="Building type" default="yes" values="residential,commercial,commercial;residential,apartments,industrial,public,school,utility,construction,yes"/>
            <text key="name" text="Name"/>
			<space/>
			<label text="-------------------- Function"/>
			<space/>
            <combo key="amenity" text="Amenity" values="atm,bank,bar,cafe,clinic,college,courthouse,embassy,fire_station,fuel,hospital,kindergarten,library,marketplace,place_of_worship,pharmacy,police,post_office,pub,public_building,restaurant,school,townhall,yes"/>
            <combo key="office" default="" text="Office" values="company,government,insurance,lawyer,political_party,yes"/>
            <combo key="shop" default="" text="Shop" values="alcohol,art,bakery,beauty,beverages,bicycle,books,butcher,car,car_parts,car_repair,charcoal,chemist,clothes,convenience,copyshop,cosmetics,doityourself,electronics,furniture,jewelry,greengrocer,hairdresser,houseware,kiosk,mobile_phone,pastry,shoes,stationary,supermarket,tailor,yes"/>
			<combo key="tourism" default="" text="Tourism" values="attraction,guest_house,hotel,yes"/>
			<space/>
			<label text="-------------------- Structural"/>
			<space/>
            <text key="building:levels" text="Storeys" default="1"/>
            <combo key="building:material" text="Material" default="" values="brick,cement_block,concrete,glass,loam,metal,plaster,wood" />
            <text key="addr:street" text="Street"/>
            <text key="addr:housenumber" text="House number"/>
            <space/>
            <label text="If 'place_of_worship', specify religion:"/>
            <combo key="religion" text="Religion" values="christian,muslim,buddhist,hindu,jewish"/>
            <space/>
            <label text="If 'hospital' or 'clinic', specify number of beds:"/>
            <text key="bed_count" text="Bed count"/>
        </item>

        <item name="Road" type="way">
            <combo key="highway" text="Type of road" values="primary,secondary,tertiary,unclassified,residential,track,footway"/>
            <text key="name" text="Name"/>
            <combo key="surface" text="Surface" values="asphalt,concrete,unpaved"/>
            <text key="width" text="Width (meters)" default="" delete_if_empty="true"/>
            <combo key="smoothness" text="Smoothness" values="good,intermediate,bad,very_bad,horrible"/>
			<space/>
            <check key="oneway" text="Oneway?" delete_if_empty="true"/>
            <space/>
            <label text="For a bridge, check both boxes below:"/>
            <check key="bridge" text="Bridge" default="off" delete_if_empty="false"/>
            <check key="layer" text="Layer 1" value="1"/>
        </item>
	
        <group name="Drainage">
            <item name="Stream" type="way">
                <label text="Stream"/>
                <key key="waterway" value="stream"/>
                <text key="depth" text="Depth (meters)" default="" delete_if_empty="true"/>
                <text key="width" text="Width (meters)" default="" delete_if_empty="true"/>
            </item>

            <item name="Ditch" type="way">
                <label text="Ditch" />
                <key key="waterway" value="ditch" />
                <key key="covered" value="no" />
                <check key="covered" text="Covered?" default="off" delete_if_empty="false"/>
                <text key="depth" text="Depth (meters)" default="" delete_if_empty="true"/>
                <text key="width" text="Width (meters)" default="" delete_if_empty="true"/>
                <combo key="blockage" text="Blockage?" values="dirt, concrete, rubbish, no" delete_if_empty="true"/>
            </item>

            <item name="Drain" type="way">
                <label text="Drain" />
                <key key="waterway" value="drain" />
                <key key="covered" value="no" />
                <check key="covered" text="Covered?" default="off" delete_if_empty="false"/>
                <text key="depth" text="Depth (meters)" default="" delete_if_empty="true"/>
                <text key="width" text="Width (meters)" default="" delete_if_empty="true"/>
                <combo key="blockage" text="Blockage?" values="dirt, concrete, rubbish, no" delete_if_empty="true"/>
            </item>

            <item name="Underground Drain">
                <label text="Underground Drain" />
                <key key="waterway" value="drain" />
                <key key="covered" value="yes" />
                <key key="layer" value="-1" />
                <text key="diameter" text="Diameter (meters)" default="" delete_if_empty="true"/>
                <combo key="blockage" text="Blockage?" values="dirt, concrete, rubbish, no" delete_if_empty="true"/>
            </item>

            <item name="Culvert">
                <label text="Culvert" />
                <key key="waterway" value="drain" />
                <key key="tunnel" value="culvert" />
                <key key="covered" value="yes" />
                <key key="layer" value="-1" />
                <text key="diameter" text="Diameter (meters)" default="" delete_if_empty="true"/>
                <combo key="blockage" text="Blockage?" values="dirt, concrete, rubbish, no" delete_if_empty="true"/>
            </item>
        </group>

        <group name="Sanitation">
            <item name="Drinking water" type="node,closedway">
                <key key="amenity" value="drinking_water" />
                <check key="pump:active" text="Working pump?" default="off" delete_if_empty="true"/>
            </item>
			<item name="Well" type="node,closedway">
                <key key="man_made" value="water_well"/>
            </item>
            <item name="Overhead tank" type="node,closedway">
                <key key="man_made" value="water_tower"/>
            </item>
            <item name="Water tank" type="node,closedway">
                <key key="man_made" value="water_tank"/>
            </item>
            <item name="Public toilet" type="node,closedway">
                <key key="amenity" value="toilets"/>
                <text key="toilets:num_chambers" text="Number of toilets"/>
            </item>
            <item name="Solid waste" type="node,closedway">
                <key key="landuse" value="dump"/>
                <check key="dump:official" text="Official?" default="off" delete_if_empty="true"/>
            </item>
        </group>

        <group name="Land use">
            <item name="Cemetery" type="node,closedway">
                <key key="landuse" value="cemetery"/>
            </item>
            <item name="Grass" type="node,closedway">
                <key key="landuse" value="grass"/>
            </item>
            <item name="Park" type="node,closedway">
                <key key="leisure" value="park"/>
            </item>
            <item name="Parking lot" type="node,closedway">
                <key key="amenity" value="parking"/>
            </item>
            <item name="Playground" type="node,closedway">
                <key key="leisure" value="playground"/>
            </item>
            <item name="Sports pitch" type="node,closedway">
                <key key="leisure" value="pitch"/>
                <key key="landuse" value="recreation_ground"/>
            </item>
            <item name="Water pond" type="node,closedway">
                 <key key="natural" value="water"/>
            </item>
            <item name="Wetland (marsh, or floodprone area)" type="node,closedway">
                <key key="natural" value="wetland" />
            </item>
        </group>
		
		<group name="Other">
			<item name="Mobile money" type="node,closedway">
				<key key="amenity" value="money_transfer" />
				<text key="operator" text="Operator" default="" delete_if_empty="true"/>
			</item>
		</group>
	</group>
</presets>
